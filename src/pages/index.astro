---
import Layout from '../layouts/Layout.astro';
import PostCard from '../components/PostCard.astro';
import { type CollectionEntry, getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
	(a: CollectionEntry<'blog'>, b: CollectionEntry<'blog'>) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="insafdev | Главная">
	<section>
		<h2 class="text-2xl font-bold tracking-tight text-white mb-6 flex items-center gap-2">
			Последние записи
		</h2>
		
		<div class="flex flex-col gap-2">
			{posts.length > 0 ? (
				posts.map((post: CollectionEntry<'blog'>) => <PostCard post={post} />)
			) : (
				<p class="text-zinc-500">Пока нет записей. Заходи попозже!</p>
			)}
		</div>
	</section>
</Layout>