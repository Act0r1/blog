---
import '../styles/global.css';
import Header from '../components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ru">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Блог о программировании, ИИ и книгах" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-zinc-950 text-zinc-300 font-mono min-h-screen flex flex-col antialiased transition-colors duration-200">
		<Header />
		<main class="flex-grow max-w-3xl w-full mx-auto px-4 sm:px-6 py-8">
			<slot />
		</main>
        <footer class="text-center py-6 text-zinc-500 text-sm">
            &copy; {new Date().getFullYear()} Мой Блог
        </footer>
	</body>
</html>